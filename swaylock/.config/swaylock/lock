#!/bin/bash
swaylock \
    --image $1 \
    --clock \
    --indicator \
    --no-unlock-indicator \
    --indicator-radius 150 \
    --effect-blur 10x7 \
    --effect-scale 1.5 \
    --timestr "%H:%M" \
    --datestr "%a, %e %B" \
    --font "CaskaydiaCove Nerd Font" \
    --font-size 48 \
    --text-color cdd6f4 \
    --inside-color 1e1e2e \
    --ring-color cba6f7 \
    --line-color 313244 \
    --key-hl-color a6e3a1 \
    --bs-hl-color f38ba8 \
    --separator-color 45475a \
    --indicator-caps-lock \
    --text-clear-color cdd6f4 \
    --text-ver-color a6e3a1 \
    --text-wrong-color f38ba8 \
    --inside-ver-color 1e1e2e \
    --inside-wrong-color 1e1e2e \
    --ring-ver-color 94e2d5 \
    --ring-wrong-color eba0ac \
    --line-ver-color 313244 \
    --line-wrong-color 313244 \
    --fade-in 0.25 \
    --fade 0.25
